{
  "name": "duplicate-file-finder",
  "version": "1.0.0",
  "description": "Find duplicate files on your system",
  "main": "main.js",
  "author": "mac",
  "license": "MIT",
  "scripts": {
    "start": "electron . --no-sandbox",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.mac.duplicatefilefinder",
    "productName": "Duplicate File Finder",
    "files": [
      "**/*"
    ],
    "mac": {
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "dependencies": {
    "fs-extra": "^11.1.1"
  },
  "devDependencies": {
    "electron": "^35.7.5",
    "electron-builder": "^25.0.0"
  }
}
